<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="LoginActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="MainActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/AnimSlide</item>
    </style>
    <style name="ActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/AnimSlide</item>
    </style>

    <style name="menu_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bb_black</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="service_kind_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/bb_black</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="problem_kind_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/bb_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:drawableRight">@mipmap/arrow_down</item>
    </style>

    <style name="horizontal_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#cccccc</item>
    </style>

    <style name="horizontal_divider2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/contentBgColor</item>
    </style>

    <style name="AnimSlide" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@animator/slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@animator/slide_out_to_left</item>
        <item name="android:activityCloseExitAnimation">@animator/slide_out_to_right</item>
        <item name="android:activityCloseEnterAnimation">@animator/slide_in_from_left</item>
    </style>
    <style name="AnimSlide2" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenExitAnimation">@animator/slide_out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@animator/slide_in_from_left</item>
    </style>

</resources>
